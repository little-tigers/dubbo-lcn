<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd"
>

    <dubbo:application name="dubbo-shop"   />

    <!--所有参与分布式事务的模块以及TxManager都必须要在同一个服务下-->
    <dubbo:registry  address="zookeeper://192.168.19.129:2181" port="20885"/>

    <dubbo:protocol accesslog="true" name="dubbo" port="20885"/>

    <dubbo:consumer  filter="transactionFilter" check="false" timeout="60000"/>

    <dubbo:service  interface="cn.v1.shop.service.ShopService" ref="shopServiceImpl"  />

    <dubbo:reference  interface="cn.v1.account.service.AccountService" id="accountService" />


</beans>